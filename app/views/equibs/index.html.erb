<h2 class="text-center">机器列表</h2>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>#</th>
            <th>图片</th>
            <th>机器名称</th>
            <th>所属部门</th>
            <th>存放位置</th>
            <th>购买日期</th>
            <th>型号</th>

        </tr>
    </thead>
    <tbody>
        <% @equibs.each do |equib| %>
        <tr>
            <td><%= equib.id %></td>
            <td>
                <%= link_to equib_path(equib) do %>
                <% if equib.image.present? %>
                <%= image_tag(equib.image.thumb.url, class: "thumbnail")%>
            <% else %>
                <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail")%>
                <% end %>
                <% end %>
            </td>

            <td><%= link_to(equib.title,equib_path(equib))%></td>
            <td><%= equib.department %></td>
            <td><%= equib.position %></td>
            <td><%= equib.purchase_date %></td>
            <td><%= equib.model %></td>

        </tr>
        <% end %>
    </tbody>
</table>
