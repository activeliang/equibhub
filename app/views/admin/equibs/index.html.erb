<h2 class="text-center">机器列表</h2>

<%= link_to("新增设备",new_admin_equib_path, class:"btn btn-success pull-right")%>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>机器名称</th>
            <th>所属部门</th>
            <th>存放位置</th>
            <th>操作选项</th>
        </tr>
    </thead>
    <tbody>
        <% @equibs.each do |equib| %>
        <tr>
            <td><%= equib.title%></td>
            <td><%= equib.department %></td>
            <td><%= equib.position %></td>
            <td><%= link_to("修改属性", edit_admin_equib_path(equib),class: "btn btn-info btn-sm")%>
                <%= link_to("删除这个设备", admin_equib_path(equib),method: :delete, data: {confirm:"你确定要删除这个设备吗？删除后无法找回！"},class: "btn btn-danger btn-sm")%>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>
